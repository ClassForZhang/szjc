/*IE下的滚动条*/
*{
    scrollbar-face-color:#3174CC; /*面子*//*#82AEE8;*/
    scrollbar-arrow-color:#82AEE8; /*箭头*/
   	scrollbar-3dlight-color:#3174CC; /*最外左*//*black*/
    scrollbar-highlight-color:#3174CC; /*左二*//*#6D6D6D*/
    scrollbar-shadow-color:#3174CC; /*右二*//*#194076*/
  	scrollbar-darkshadow-color:#3174CC; /*右一*//*#252625*/
   	scrollbar-track-color:#194076; /*滑道*/
}

::-webkit-scrollbar{display: none}
body{
    scrollbar-3dlight-color:#F2F2F2; /*- 最外左 -*/
    scrollbar-highlight-color:#F2F2F2; /*- 左二 -*/
    scrollbar-face-color:#ECF1F4; /*- 面子 -*/
    scrollbar-arrow-color:#F2F2F2; /*- 箭头 -*/
    scrollbar-shadow-color:#F2F2F2; /*- 右二 -*/
    scrollbar-darkshadow-color:#F2F2F2; /*- 右一 -*/
    scrollbar-base-color:#F2F2F2; /*- 基色 -*/
    scrollbar-track-color:#F2F2F2;/*- 滑道 -*/
}
.ace-scroll{overflow: hidden;}
.scroll-track { position: absolute; top: 40px; bottom: auto; height: auto; background-color: #E7E7E7; z-index: 9999; width: 6px; opacity: 0;-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";  }/*兼容ie8*/
/*.scroll-track.scroll-active{-webkit-transition: width 0.25s ease 0.75s, opacity 0.25s ease 0.75s; -o-transition: width 0.25s ease 0.75s, opacity 0.25s ease 0.75s;  transition: width 0.25s ease 0.75s, opacity 0.25s ease 0.75s; }*/
.scroll-bar { position: absolute; top: 0; left: 0; width: inherit; background-color: #ACE;background: #bbd4e5; }
.sidebar.menu-large .scroll-track{ right: 0;}
.menu-min .scroll-track{ left: 205px;}

.scroll-content { position: static; overflow: hidden;}
.ace-scroll:hover .scroll-active,
.scroll-active.scroll-track:hover,
.scroll-active.scroll-track.scroll-hover,
.scroll-active.scroll-track.active,
.scroll-active.scroll-track:active { width: 6px; opacity: 1;-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";  }/*/兼容ie8/ */