body,div,p,ul,ol,li{
	margin:0;padding: 0;
}
a,a:hover,a:focus{
	text-decoration: none;
}

input[type="text"],
input[type="password"],
select{
	height: 30px;
	line-height: 30px;
}
.btn{
	padding:5px 35px;
}
.table>thead:first-child>tr:first-child>th{
	border:grey 1px solid;
}
.table>thead>tr>th,
.table>tbody>tr>td{
	border:grey 1px solid;
}

header{
	height: 45px;
	line-height: 45px;
	background: #2681c7;
}
header p{
	display: inline-block;
}
header p a{
	color:white;
	font-size: 16px;
}

.main-left{
	width: 250px;
	height: 100%;
	/*overflow-y:scroll;*/
	float: left;

}
.main-right{
	margin-left: 250px;
	height: 100%;
	/*overflow: hidden;*/
	/*background-color: #174f99;*/
}
.main-left .firstLayer{
	height: 100%;
	overflow-y:scroll;
	/*background-color: #0a1d33;*/
	background: #f2f2f2;
}
.main-left .secondLayer,
.main-left .thirdLayer{
	height: 100%;
	background: white;
}
.thirdLayer li a{
	padding-left: 40px;
}
.main-left li{
	width: 100%;
	/*height: 40px;*/
	overflow:hidden;
	line-height: 40px;
	
}
.main-left .secondLayer,
.main-left .thirdLayer{
	display: none;
}

