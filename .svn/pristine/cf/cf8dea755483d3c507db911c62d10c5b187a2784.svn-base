		$(".delete").click(function(event) {
			var selectedRows = $('.opeartionLists').datagrid("getChecked");
			if (selectedRows.length == 0) {
				alert("请至少勾选一个删除")
				return;
			}else{
				var array = new Array();
				for(var i=0;i<selectedRows.length;i++){
					array.push(selectedRows[i].id);
				}
				if(confirm("是否确认删除")){
					$.ajax({
						type:'post',
						url:'${ctx}/operateSpecial/deletePublishs.action',
						data:{'ids':array.toString()},
						success:function(){
							alert("删除成功");
							window.location.reload();
						}
					})
				}
			}
			/* selectedRows.map(function(row, index) {
